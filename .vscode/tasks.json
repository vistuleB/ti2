{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "gleam run today's special",
      "type": "shell",
      "command": "gleam",
      "group": {
        "kind": "build",
        "glob": "**/*.wly",
      },
      "presentation": { "reveal": "always", "panel": "shared", "clear": true },
      "problemMatcher": [],
      "runOptions": {
        "reevaluateOnRerun": true,
        "instanceLimit": 1,
      },
      "options": {
        "cwd": "${workspaceFolder}",
      },
      "args": ["run", "--", "--only", "01"],
    },
    {
      "label": "gleam run -m <file>",
